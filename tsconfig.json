{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "src",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./db/**/*", "./src/**/*", "./*"],
  "exclude": ["./node_modules"]
}
